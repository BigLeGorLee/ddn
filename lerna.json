{
  "changelog": {
    "labels": {
      "pr(enhancement)": ":improvement: Enhancement",
      "pr(bug)": ":bug: Bug Fix",
      "pr(documentation)": ":docs: Documentation",
      "pr(dependency)": ":deciduous_tree: Dependency",
      "pr(chore)": ":turtle: Chore"
    },
    "repo": "imfly/ddn",
    "cacheDir": ".changelog"
  },
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "publishConfig": {
    "access": "public"
  },
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish %s",
      "git-tag-version": false,
      "push": false
    }
  },
  "useWorkspaces": true,
  "npmClient": "yarn"
}
